{
    "compilerOptions": {
        "allowJs": true,
        "incremental": true,
        "target": "es2019",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "~": ["src"],
            "~/*": ["src/*"]
        },
        "types": ["jest"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
