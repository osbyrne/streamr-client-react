{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "paths": {
            "~": ["src"],
            "~/*": ["src/*"]
        },
        "types": ["jest"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}
